{
  "name": "restaurant-picker",
  "version": "2.0.0",
  "description": "A web-based restaurant selection application with spinning wheel interface",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint functions/**/*.js",
    "lint:fix": "eslint functions/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "dev": "wrangler pages dev . --local",
    "deploy": "wrangler pages deploy .",
    "deploy:preview": "wrangler pages deploy . --branch=preview"
  },
  "keywords": [
    "restaurant",
    "picker",
    "decision",
    "wheel",
    "pwa",
    "cloudflare"
  ],
  "author": "BenSweaterVest",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "vitest": "^2.0.0",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
